import imp
import sys
import argparse

from repoxplorer.index import projects
from repoxplorer.index import contributors

config = '%s/local/share/repoxplorer/config.py' % sys.prefix

parser = argparse.ArgumentParser(description='RepoXplorer config validator')
parser.add_argument(
    '--config', default=config,
    help='Path to the repoXplorer configuration file')

args = parser.parse_args()


def validate():
    projects_index = projects.Projects(conf.db_path)
    issues = projects_index.validate()
    contributors_index = contributors.Contributors(conf.db_path)
    issues.extend(contributors_index.validate())
    for issue in issues:
        print issue
    return len(issues)


if __name__ == "__main__":
    conf = imp.load_source('config', args.config)
    errs = validate()
    if errs:
        print "Corrupted configuration exit !"
        sys.exit(errs)
    else:
        print "Configuration OK."
